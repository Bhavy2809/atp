# Program 3: Distance Vector Routing with Link Break and Recovery

# Step 1: Simulator and Trace Files
set ns [new Simulator]

set tf [open ex3.tr w]
$ns trace-all $tf

set nf [open ex3.nam w]
$ns namtrace-all $nf

# File to log congestion window
set cwind [open win3.tr w]

# Step 2: Node Colors (for NAM)
$ns color 1 Blue
$ns color 2 Red

# Step 3: Create Nodes
set n0 [$ns node]
set n1 [$ns node]
set n2 [$ns node]
set n3 [$ns node]
set n4 [$ns node]
set n5 [$ns node]

# Step 4: Create Links
$ns duplex-link $n0 $n1 0.3Mb 10ms DropTail
$ns duplex-link $n0 $n2 0.3Mb 10ms DropTail
$ns duplex-link $n2 $n3 0.3Mb 10ms DropTail
$ns duplex-link $n1 $n4 0.3Mb 10ms DropTail
$ns duplex-link $n3 $n5 0.5Mb 10ms DropTail
$ns duplex-link $n4 $n5 0.5Mb 10ms DropTail

# Step 5: Routing Protocol
$ns rtproto DV

# Step 6: TCP Agent + FTP (n0 -> n4)
set tcp [new Agent/TCP]
$ns attach-agent $n0 $tcp

set sink [new Agent/TCPSink]
$ns attach-agent $n4 $sink

$ns connect $tcp $sink

set ftp [new Application/FTP]
$ftp attach-agent $tcp

# Flow ID for coloring in NAM
$tcp set fid_ 1

$ns at 0.1 "$ftp start"

# Step 7: Link Break & Recovery (n1 <-> n4)
$ns rtmodel-at 1.0 down $n1 $n4
$ns rtmodel-at 3.0 up $n1 $n4

# Step 8: Congestion Window Plot
proc plotWindow {tcpSource file} {
    global ns
    set time 0.01
    set now [$ns now]
    set cwnd [$tcpSource set cwnd_]
    puts $file "$now $cwnd"
    $ns at [expr $now + $time] "plotWindow $tcpSource $file"
}

# Start plotting after some time
$ns at 1.0 "plotWindow $tcp $cwind"

# Step 9: Finish Procedure
proc finish {} {
    global ns tf nf cwind
    $ns flush-trace
    close $tf
    close $nf
    close $cwind
    exec nam ex3.nam &
    exec xgraph win3.tr &
    exit 0
}

$ns at 12.0 "finish"

# Run the simulation
$ns run
