
set ns [new Simulator]

set tf [open tf.tr w]
$ns trace-all $tf

set nf [open nf.nam w]
$ns namtrace-all $nf


set n0 [$ns node]
set n1 [$ns node]
set n2 [$ns node]
set n3 [$ns node]

$ns duplex-link $n0 $n2 2Mb 2ms DropTail
$ns duplex-link $n1 $n2 2Mb 2ms DropTail
$ns duplex-link $n2 $n3 0.4Mb 10ms DropTail


$ns queue-limit $n2 $n3 5


set udp1 [new Agent/UDP]
$ns attach-agent $n1 $udp1

set null1 [new Agent/Null]
$ns attach-agent $n3 $null1

$ns connect $udp1 $null1

set cbr1 [new Application/Traffic/CBR]
$cbr1 attach-agent $udp1

# Optional CBR parameters (can be tuned)
$cbr1 set packetSize_ 1000
$cbr1 set interval_ 0.005   ;# 5 ms between packets

$ns at 0.1 "$cbr1 start"
$ns at 0.4 "$cbr1 stop"

# Step 5: Create TCP + FTP Flow (n0 -> n3)
set tcp1 [new Agent/TCP]
$ns attach-agent $n0 $tcp1

set tcpsink [new Agent/TCPSink]
$ns attach-agent $n3 $tcpsink

$ns connect $tcp1 $tcpsink

set ftp1 [new Application/FTP]
$ftp1 attach-agent $tcp1

$ns at 0.5 "$ftp1 start"
$ns at 0.7 "$ftp1 stop"


proc finish {} {
    global ns tf nf
    $ns flush-trace
    close $tf
    close $nf
    exec nam nf.nam &
    exit 0
}

$ns at 0.9 "finish"


$ns run
